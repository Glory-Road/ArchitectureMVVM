<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.architecture.mvvm" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CoinWalletApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.TranslucentStatusBar" >
        <activity
            android:name=".app.assets.SendDetailActivity"
            android:exported="false"
            android:theme="@style/MaterialThemeTranslucentStatusBar" />
        <activity
            android:name=".app.assets.SendListActivity"
            android:exported="false"
            android:theme="@style/MaterialThemeTranslucentStatusBar" />
        <activity
            android:name=".app.assets.ReceiveDetailActivity"
            android:exported="false"
            android:theme="@style/MaterialThemeTranslucentStatusBar" />
        <activity
            android:name=".app.assets.ReceiveListActivity"
            android:exported="false"
            android:theme="@style/MaterialThemeTranslucentStatusBar" />
        <activity
            android:name=".app.earn.SubscribeActivity"
            android:exported="false"
            android:theme="@style/MaterialThemeTranslucentStatusBar" />
        <activity
            android:name=".app.sign.SignActivity"
            android:exported="false"
            android:theme="@style/MaterialThemeTranslucentStatusBar" />
        <activity
            android:name=".app.earn.EarnActivity"
            android:exported="false"
            android:theme="@style/MaterialThemeTranslucentStatusBar" />
        <activity
            android:name=".app.main.MainActivity"
            android:exported="true"
            android:theme="@style/MaterialThemeTranslucentStatusBar.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>